generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  fullName       String
  email          String        @unique
  passwordHash   String
  role           Role          @default(STUDENT)
  totalPoints    Int           @default(0)
  level          Int           @default(1)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  coursesCreated Course[]      @relation("InstructorCourses")
  enrollments    Enrollment[]
  quizAttempts   QuizAttempt[]
  userBadges     UserBadge[]

  @@index([role])
}

model Course {
  id           String       @id @default(cuid())
  title        String
  description  String
  price        Float
  level        Int
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  instructorId String
  instructor   User         @relation("InstructorCourses", fields: [instructorId], references: [id])
  enrollments  Enrollment[]
  lessons      Lesson[]
  quizzes      Quiz[]

  @@index([instructorId])
}

model Lesson {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  content   String
  orderNo   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation(fields: [courseId], references: [id])

  @@unique([courseId, orderNo])
  @@index([courseId])
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  progress  Int      @default(0)
  createdAt DateTime @default(now())
  course    Course   @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Quiz {
  id        String        @id @default(cuid())
  courseId  String
  title     String
  timeLimit Int?
  passScore Int           @default(50)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  questions Question[]
  course    Course        @relation(fields: [courseId], references: [id])
  attempts  QuizAttempt[]

  @@index([courseId])
}

model Question {
  id      String @id @default(cuid())
  quizId  String
  prompt  String
  optionA String
  optionB String
  optionC String
  optionD String
  correct String
  points  Int    @default(10)
  quiz    Quiz   @relation(fields: [quizId], references: [id])

  @@index([quizId])
}

model QuizAttempt {
  id           String   @id @default(cuid())
  userId       String
  quizId       String
  score        Int
  percent      Int
  passed       Boolean
  earnedPoints Int      @default(0)
  createdAt    DateTime @default(now())
  quiz         Quiz     @relation(fields: [quizId], references: [id])
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([quizId])
  @@index([createdAt])
}

model Badge {
  id          String      @id @default(cuid())
  code        String      @unique
  name        String
  description String
  pointsBonus Int         @default(0)
  userBadges  UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())
  badge     Badge    @relation(fields: [badgeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}
