# Path: E:\EduQuest\server\.env.docker
# Docker Production Environment Template
# Copy to .env and update values

# Database (automatically configured in docker-compose)
DATABASE_URL=postgresql://eduquest:eduquest_password_change_in_production@postgres:5432/eduquest

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters

# Server
PORT=5000
NODE_ENV=production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS (Update with your frontend URL)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email (Gmail example - use app password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
FRONTEND_URL=https://yourdomain.com

# Logging
LOG_LEVEL=info