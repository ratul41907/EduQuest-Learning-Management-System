generator client {
  provider = "prisma-client-js"
  engineType    = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  fullName     String
  email        String   @unique
  passwordHash String
  role         Role     @default(STUDENT)

  totalPoints  Int      @default(0)
  level        Int      @default(1)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  coursesCreated    Course[]           @relation("InstructorCourses")
  enrollments       Enrollment[]
  quizAttempts      QuizAttempt[]
  userBadges        UserBadge[]
  // Day 25: Relation to track completed lessons
  lessonCompletions LessonCompletion[] 

  @@index([role])
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  thumbnail   String?
  isPublished Boolean  @default(false)

  instructorId String
  instructor   User     @relation("InstructorCourses", fields: [instructorId], references: [id])

  lessons     Lesson[]
  enrollments Enrollment[]
  quizzes     Quiz[]
  // Day 25: Relation to track completions within this course
  lessonCompletions LessonCompletion[] 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([instructorId])
}

model Lesson {
  id          String @id @default(cuid())
  courseId    String
  course      Course @relation(fields: [courseId], references: [id])
  title       String
  content     String
  orderNo     Int

  // Day 25: Relation to track who completed this specific lesson
  completions LessonCompletion[] 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([courseId, orderNo])
  @@index([courseId])
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  progress  Int      @default(0) // 0..100
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model LessonCompletion {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  lessonId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])
  lesson Lesson @relation(fields: [lessonId], references: [id])

  // Ensures a student can't complete the same lesson multiple times
  @@unique([userId, lessonId])
  @@index([userId])
  @@index([courseId])
  @@index([lessonId])
}

model Quiz {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  timeLimit Int?     // seconds
  passScore Int      @default(50)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course    Course      @relation(fields: [courseId], references: [id])
  questions Question[]
  attempts  QuizAttempt[]

  @@index([courseId])
}

model Question {
  id        String @id @default(cuid())
  quizId    String
  quiz      Quiz   @relation(fields: [quizId], references: [id])

  prompt    String
  optionA   String
  optionB   String
  optionC   String
  optionD   String
  correct   String // "A"|"B"|"C"|"D"
  points    Int    @default(10)

  @@index([quizId])
}

model QuizAttempt {
  id           String   @id @default(cuid())
  userId       String
  quizId       String

  score        Int
  percent      Int
  passed       Boolean

  earnedPoints Int @default(0)

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  quiz Quiz @relation(fields: [quizId], references: [id])

  @@index([userId])
  @@index([quizId])
  @@index([createdAt])
}

model Badge {
  id          String @id @default(cuid())
  code        String @unique // FIRST_QUIZ etc.
  name        String
  description String
  pointsBonus Int    @default(0)

  userBadges UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  badge Badge @relation(fields: [badgeId], references: [id])

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
}